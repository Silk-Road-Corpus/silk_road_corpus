{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A histogram of the number of records in the Chu San Zang Ji Ji, filtered by fascicle and count.",
  "width": 600,
  "height": 400,
  "data": {"url": "../data/chusanzangjiji.csv"},
  "transform": [
    {
      "filter": {
        "field": "CSZJJ Fascicle",
        "oneOf": [3, 4]
      }
    },
    {
      "filter": "datum['Taishō classification'] != null && datum['Taishō classification'] != '' && (datum['CSZJJ Fascicle'] == 3 || datum['CSZJJ Fascicle'] == 4)"
    },
    {
      "aggregate": [{"op": "count", "field": "*", "as": "count"}],
      "groupby": ["Taishō classification"]
    },
    {
      "filter": {
        "field": "count",
        "gt": 5
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Taishō classification",
      "type": "nominal",
      "axis": {"labelAngle": 45, "labelFontSize": 16, "titleFontSize": 16},
      "sort": "-y"
    },
    "y": {
      "field": "count",
      "type": "quantitative",
      "axis": {"labelFontSize": 16, "titleFontSize": 16}
    }
  }
}