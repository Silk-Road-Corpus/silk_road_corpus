{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A two-circle Venn diagram template showing the count of elements in each region.",
  "width": 600,
  "height": 400,
  "data": [
    {
      "name": "sets",
      "values": [
        {"id": "Set 1", "x": 250, "y": 200, "radius": 100, "color": "blue"},
        {"id": "Set 2", "x": 330, "y": 200, "radius": 100, "color": "red"}
      ]
    },
    {
      "name": "sizes",
      "values": [
        {"label": "2", "x": 190, "y": 200},
        {"label": "2", "x": 290, "y": 200},
        {"label": "2", "x": 390, "y": 200}
      ]
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {"data": "sets"},
      "encode": {
        "enter": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "size": {"signal": "datum.radius * datum.radius * PI"},
          "shape": {"value": "circle"},
          "fill": {"field": "color"},
          "fillOpacity": {"value": 0.4}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "sets"},
      "encode": {
        "enter": {
          "x": {"field": "x"},
          "y": {"signal": "datum.y - datum.radius - 10"},
          "text": {"field": "id"},
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fontWeight": {"value": "bold"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "sizes"},
      "encode": {
        "enter": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "text": {"field": "label"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 18},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ]
}