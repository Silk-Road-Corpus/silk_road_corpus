{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A line chart showing the distribution of term document frequencies.",
  "width": 600,
  "height": 200,
  "padding": 5,

  "data": [
    {
      "name": "table",
      "url": "../data/terminology_doc_freq_hist.csv",
      "format": {"type": "csv", "parse": "auto"}
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "range": "width",
      "domain": {"data": "table", "field": "document_frequency"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "table", "field": "num_doc_frequency"}
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "x", "title": "Document frequency (n-gram analysis)"},
    {"orient": "left", "scale": "y", "title": "No. distinct terms"}
  ],

  "marks": [
    {
      "type": "line",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "document_frequency"},
          "y": {"scale": "y", "field": "num_doc_frequency"},
          "strokeWidth": {"value": 2}
        },
        "update": {
          "strokeOpacity": {"value": 1}
        },
        "hover": {
          "strokeOpacity": {"value": 0.5}
        }
      }
    }
  ]
}