{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A histogram of the number of records in the Chu San Zang Ji Ji, grouped by century.",
  "width": 600,
  "height": 400,
  "data": {"url": "../data/chusanzangjiji.csv"},
  "transform": [
    {
      "filter": "datum['Century assumed for analysis'] != null && datum['Century assumed for analysis'] != ''"
    },
    {
      "aggregate": [{"op": "count", "field": "*", "as": "count"}],
      "groupby": ["Century assumed for analysis"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Century assumed for analysis",
      "type": "nominal",
      "axis": {
        "labelAngle": 0,
        "labelFontSize": 16,
        "titleFontSize": 16,
        "title": "Century produced"
      },
      "sort": {
        "op": "min",
        "field": "Century assumed for analysis"
      }
    },
    "y": {
      "field": "count",
      "type": "quantitative",
      "axis": {
        "labelFontSize": 16, 
        "titleFontSize": 16,
        "title": "Number of titles"
      }
    }
  }
}